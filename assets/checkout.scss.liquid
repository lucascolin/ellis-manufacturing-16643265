@media print {
  .header {
    padding: 2em 0;
  }
  #additional-content, .section.section--thank-you, .product-list .product__image {
    display:none;
  }
  .section {
    width:50%;
    float:left;
  }
  .order-summary {
    width:100%;
    float:left;
  }
  .product-list .product--has-image {
    padding-left:0;
  }
  h1 {
      font-size:34px;
  }
  h2 {
      font-size:28px;
  }	
  h3, .order-summary .payment-due-container .payment-due__price {
      font-size:22px;
  }
  h4, .shop__desc {
      font-size:15px;
  }
  h5 {
    font-size:12px;
  }
  .order-summary__section {
    padding:1em;
  }
  .shop__logo {
    max-width:140px;
  }
  .section {
    padding:1.5em 0;
  }
}